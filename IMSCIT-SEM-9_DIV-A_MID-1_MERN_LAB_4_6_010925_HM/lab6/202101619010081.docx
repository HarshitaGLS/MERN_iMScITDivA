import React, { useState } from 'react'

const LoginForm = () => {
    let [username, setUsername] = useState("");
    let [password, setPassword] = useState("");
    let [result, setResult] = useState("");

    const check = () => {
        if(username=='admin' && password=='1234')
        {
            setResult("Login Successful!");
        }
        else
        {
            setResult("Invalid Credentials");
        }
    }
  return (
    <>
      <input type='text' 
        value={username}
        placeholder='Enter Your ID'
        onChange={(e) => {setUsername(e.target.value)}}
        /><br/>
        <input type='password'
        value={password}
        placeholder='Enter Your Password'
        onChange={(e) => {setPassword(e.target.value)}}
        /><br/>
        <button type='button' onClick={check}> Login </button><br/>
        <h3>{result}</h3>
    </>
  )
}
export default LoginForm




NumberChecker.jsx

import React, { useState } from 'react'

const NumberChecker = () => {
    let [num, setNum] = useState("");
    let [result, setResult] = useState("");
    const evenandodd = () =>  {
        if(num%2==0)
        {
            setResult("Number is Even");
        }
        else
        {
            setResult("Number is Odd");
        }
    }
  return (
    <>
      <input type='text'
      placeholder='Please Enter a number'
      onChange={(e)=>{setNum(e.target.value)}} /><br/>
      <button type='button' onClick={evenandodd}> Check </button><br/>
      <h3>{result}</h3>
    </>
  )
}

export default NumberChecker





