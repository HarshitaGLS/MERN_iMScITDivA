import React, { useState } from "react"

const NumberCheck =() =>{
    let [number,setNumber] =useState('')
    let [result,setResult] = useState('')

    const handleChk = ()=>{
        if(parseInt(number) % 2 == 0){
            setResult("number is EVEN!")
        }
        else{setResult("number is ODD")}
    }
    return(
        <>
        <input type="text" placeholder="Enter number" value={number} className="me-9" onChange={(e)=>setNumber(e.target.value)}/><br/>
        <button type="button" className="btn btn-info" onClick={handleChk}>Check</button>
        <h2 style={{"color":"yellow"}}>{result}</h2>
        
        {number}
        </>
    )
}
export default NumberCheck
